@model SymptomsProject.Models.Patient

@{
    ViewData["Title"] = "Detalhes dos Pacientes";
}

<div class="container my-5">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>
    <h4 class="card-title text-center mb-4">Informações dos pacientes</h4>
    <div class="card shadow mx-auto" style="max-width: 600px;">
        <div class="card-body">
            <dl class="row text-center">
                <dt class="col-6 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-6">
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt class="col-6 font-weight-bold">
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </dt>
                <dd class="col-6">
                    @Html.DisplayFor(model => model.PhoneNumber)
                </dd>

                <dt class="col-6 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-6">
                    @Html.DisplayFor(model => model.Email)
                </dd>

                <dt class="col-6 font-weight-bold">
                    @Html.DisplayNameFor(model => model.CreationDate)
                </dt>
                <dd class="col-6">
                    @Html.DisplayFor(model => model.CreationDate)
                </dd>

                <dt class="col-6 font-weight-bold">
                    @Html.DisplayNameFor(model => model.EditDate)
                </dt>
                <dd class="col-6">
                    @Html.DisplayFor(model => model.EditDate)
                </dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary btn-sm mx-2">Editar</a>
            <a asp-action="Index" class="btn btn-secondary btn-sm mx-2">Voltar para a lista</a>
        </div>
    </div>
</div>
