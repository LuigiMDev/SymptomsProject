@model SymptomsProject.Models.Patient

@{
    ViewData["Title"] = "Registrar Paciente";
}

<div class="container my-5">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

<div class="card shadow mx-auto" style="max-width: 600px;">
    <div class="card-body">
        <h4 class="card-title text-center mb-4">Novo Paciente</h4>

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3 text-center"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label font-weight-bold"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label font-weight-bold"></label>
                <input asp-for="PhoneNumber" id="phone" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label font-weight-bold"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Criar" class="btn btn-primary px-4 mt-3" />
            </div>
        </form>
    </div>
    <div class="card-footer text-center">
        <a asp-action="Index" class="btn btn-secondary px-2 my-2">Voltar para a lista</a>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.js"></script>
<script>
    $('#phone').mask('+55 (00) 00000-0000');
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
